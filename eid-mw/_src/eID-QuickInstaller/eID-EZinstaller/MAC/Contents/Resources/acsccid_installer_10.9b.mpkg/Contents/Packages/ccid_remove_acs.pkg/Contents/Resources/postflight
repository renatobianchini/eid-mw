#!/bin/sh

CCID_DIR=/usr/libexec/SmartCardServices/drivers/ifd-ccid.bundle/Contents
ACS_VID=0x072f

# Backup Info.plist
if [ ! -f $CCID_DIR/Info.plist.bak ]; then
    cp -p $CCID_DIR/Info.plist $CCID_DIR/Info.plist.bak
fi

# Remove ACS readers from Info.plist
/Library/ACS/bin/remove_readers.py $CCID_DIR/Info.plist $ACS_VID
exit 0
